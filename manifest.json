{
    "manifest_version": 3,
    "name": "Tab Saver",
    "description": "Save and restore all tabs in the current window.",
    "version": "1.0",
    "permissions": [
      "tabs",
      "storage"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "128": "icon.jpeg"
      }
    },
    "icons": {
      "16": "icon.jpeg",
      "48": "icon.jpeg",
      "128": "icon.jpeg"
    }
  }
